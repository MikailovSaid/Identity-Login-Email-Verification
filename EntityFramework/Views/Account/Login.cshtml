@model LoginVM
@{
    ViewData["Title"] = "Login";
}


<div class="d-flex justify-content-center ">
    <div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" asp-action="Login">
            <div class="form-group">
                <h4 class="border-bottom pb-2">Login</h4>
                <div class="form-group">
                    <input asp-for="UserNameOrEmail" id="" class="mb-4" placeholder="User Name or Email">
                    <span asp-validation-for="UserNameOrEmail"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" id="" class="mb-4" placeholder="Password">
                    <span asp-validation-for="Password"></span>

                </div>

                <span>Remember Me</span>
                <button type="submit" class="mb-3">Log In</button>

                <p>Dont You Have Account, <a asp-action="Register"> Register</a></p>
                <p><a href="#">Lost Your Password</a></p>
            </div>
        </form>

    </div>

</div>

@section Scripts{
    <partial name="_ValidationPartialView" />
}
